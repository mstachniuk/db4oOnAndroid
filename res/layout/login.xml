<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginMenu"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">"

    <TextView
        android:id="@+idLogin/loginLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login:"/>
    <EditText
        android:id="@+idLogin/loginEntry"
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@idLogin/loginLabel"/>

    <TextView
        android:id="@+idLogin/passwordLabel"
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:layout_below="@idLogin/loginEntry"/>
    <EditText
        android:id="@+idLogin/passwordEntry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@idLogin/passwordLabel"/>

    <Button
        android:id="@+idLogin/loginButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@idLogin/passwordEntry"/>

</LinearLayout>